<Window x:Class="VNT2TXT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конвертер vNote в Text" Height="320" Width="320">
    <DockPanel VerticalAlignment="Stretch">
        <TextBlock Text="Перетащите файл vNote сюда" Drop="MethodDrop" AllowDrop="True" Margin="40, 5" DockPanel.Dock="Top"/>
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="myText" TextWrapping="Wrap"/>
        </ScrollViewer>
    </DockPanel>
</Window>
